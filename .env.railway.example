# Application Configuration
APP_NAME="Medical Coding Intelligence Platform"
APP_VERSION="2.1.0"
DEBUG=false
ENVIRONMENT=production

# API Configuration
API_HOST=0.0.0.0
API_PORT=$PORT
API_PREFIX=/api
CORS_ORIGINS=["*"]

# MongoDB Configuration (use Railway MongoDB or MongoDB Atlas)
MONGO_URL=mongodb://localhost:27017
DB_NAME=medical_coding

# OpenAI Configuration (Required)
OPENAI_API_KEY=your_openai_api_key_here
PRIMARY_MODEL=gpt-4o
OPENAI_EMBEDDING_MODEL=text-embedding-3-large
OPENAI_MAX_TOKENS=4096
OPENAI_TEMPERATURE=0.1

# UMLS API Configuration (Required for medical APIs)
UMLS_API_KEY=your_umls_api_key_here
UMLS_USERNAME=your_umls_username_here

# Pinecone Configuration (Required for RAG functionality)
PINECONE_API_KEY=your_pinecone_api_key_here
PINECONE_INDEX_NAME=biobert
PINECONE_ENVIRONMENT=us-east-1
PINECONE_DIMENSION=768
PINECONE_METRIC=cosine

# Redis Configuration (Railway will provide this)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=""

# Embedding Configuration
EMBEDDING_MODEL_NAME=all-MiniLM-L6-v2
BIOBERT_MODEL_PATH=""

# Cache Configuration
CACHE_TTL=3600
API_CACHE_TTL=1800

# Rate Limiting
RATE_LIMIT_CALLS=100
RATE_LIMIT_PERIOD=60

# Security
SECRET_KEY=your-secret-key-here
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30