# Medical Terminology System Configuration Example
# Copy this file to .env and fill in your actual values

# Application Settings
APP_NAME="Medical Code Mapper API"
APP_VERSION="2.1.0"
DEBUG=false
ENVIRONMENT=development

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_PREFIX=/api
CORS_ORIGINS=["*"]

# MongoDB Configuration
MONGO_URL=mongodb://localhost:27017
DB_NAME=medical_terminology

# Redis Configuration (Redis Cloud)
REDIS_HOST=redis-14826.c11.us-east-1-3.ec2.redns.redis-cloud.com
REDIS_PORT=14826
REDIS_USERNAME=default
REDIS_PASSWORD=your-redis-password-here
REDIS_DB=0
REDIS_CACHE_TTL=3600

# Pinecone Configuration
PINECONE_API_KEY=your-pinecone-api-key
PINECONE_ENVIRONMENT=us-east-1
PINECONE_INDEX_NAME=medical-biobert

# OpenAI Configuration
OPENAI_API_KEY=your-openai-api-key
PRIMARY_MODEL=gpt-4o

# Medical API Keys
UMLS_API_KEY=your-umls-api-key
UMLS_USERNAME=your-umls-username
RXNORM_BASE_URL=https://rxnav.nlm.nih.gov/REST
WHO_ICD_CLIENT_ID=your-who-icd-client-id
WHO_ICD_CLIENT_SECRET=your-who-icd-client-secret
LOINC_USERNAME=your-loinc-username
LOINC_PASSWORD=your-loinc-password
SNOMED_BROWSER_URL=https://browser.ihtsdotools.org/snowstorm/snomed-ct

# Performance Settings
MAX_CONCURRENT_REQUESTS=100
REQUEST_TIMEOUT=30
BATCH_SIZE=100

# Search Configuration
SEARCH_TOP_K=50
MIN_SIMILARITY_SCORE=0.7
HYBRID_ALPHA=0.5

# Logging
LOG_LEVEL=INFO
# LOG_FILE=/path/to/logfile.log

# Monitoring (optional)
ENABLE_METRICS=true
METRICS_PORT=9090
ENABLE_TRACING=true
# OTLP_ENDPOINT=http://localhost:4317