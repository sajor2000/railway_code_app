MONGO_URL="mongodb://localhost:27017"
DB_NAME="medical_mapper_db"

# ===================================================
# MEDICAL CODE MAPPER - CUSTOM CONFIGURATION
# Azure OpenAI for Embeddings + Regular OpenAI for Chat
# ===================================================

# UMLS (Primary terminology source)
UMLS_API_KEY=your_umls_api_key_here
UMLS_USERNAME=your_umls_username_here

# RxNorm (Medications)
RXNORM_BASE_URL=https://rxnav.nlm.nih.gov/REST

# WHO ICD (Diagnoses)
WHO_ICD_CLIENT_ID=your_who_icd_client_id_here
WHO_ICD_CLIENT_SECRET=your_who_icd_client_secret_here

# FHIR Servers
HAPI_FHIR_URL=https://hapi.fhir.org/baseR4
LOINC_FHIR_URL=https://fhir.loinc.org

# LOINC Search API (Regenstrief)
LOINC_USERNAME=your_loinc_username_here
LOINC_PASSWORD=your_loinc_password_here

# SNOMED CT
SNOMED_BROWSER_URL=https://browser.ihtsdotools.org/snowstorm/snomed-ct

# OpenFDA (Drug safety)
OPENFDA_BASE_URL=https://api.fda.gov

# Clinical Trials
CLINICALTRIALS_API_URL=https://clinicaltrials.gov/api/v2

# Rate Limiting
DEFAULT_RATE_LIMIT=10  # requests per second
CACHE_TTL=86400  # 24 hours in seconds

# ===================================================
# OPENAI CONFIGURATION (For Chat/LLM)
# ===================================================
LLM_PROVIDER=OpenAI
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_BASE_URL=https://api.openai.com/v1
PRIMARY_MODEL=gpt-4o

# ===================================================
# PINECONE CONFIGURATION (Optional - for Production)
# ===================================================
PINECONE_API_KEY=your_pinecone_api_key_here
PINECONE_INDEX_NAME=medical-biobert
PINECONE_ENVIRONMENT=your_pinecone_environment_here